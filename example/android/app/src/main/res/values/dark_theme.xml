<resources>

    <style name="PSPDFCatalog.Theme.Dark" parent="PSPDFKit.Theme.Dark">
        <item name="colorPrimary">@color/dark_background_color</item>
        <item name="colorPrimaryDark">@color/dark_status_bar</item>
        <item name="colorAccent">@color/dark_input_field_blue</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="alertDialogTheme">@style/PSPDFCatalog.AlertDialog.Dark</item>
        <item name="android:listDivider">@android:drawable/divider_horizontal_dark</item>

        <!-- Default background color of PSPDFKit Views. PDF view background is controlled by a separate property pspdf__backgroundColor -->
        <item name="android:colorBackground">@color/dark_background_color</item>
        <!-- Default foreground color of PSPDFKit Views. -->
        <item name="android:colorForeground">@color/dark_input_field_blue</item>

        <item name="pspdf__contextualToolbarStyle">@style/PSPDFCatalog.ContextualToolbar.Dark</item>
        <item name="pspdf__actionBarIconsStyle">@style/PSPDFCatalog.ActionBarIcons.Dark</item>

        <item name="pspdf__backgroundColor">@color/dark_background_color</item>
        <item name="pspdf__navigationHistoryIconColor">@color/dark_accent</item>
        <item name="pspdf__inlineSearchStyle">@style/PSPDFCatalog.SearchViewInline.Dark</item>
        <item name="pspdf__modularSearchStyle">@style/PSPDFCatalog.SearchViewModular.Dark</item>
        <item name="pspdf__thumbnailBarStyle">@style/PSPDFCatalog.ThumbnailBar.Dark</item>
        <item name="pspdf__outlineViewStyle">@style/PSPDFCatalog.OutlineView.Dark</item>
        <item name="pspdf__thumbnailGridStyle">@style/PSPDFCatalog.ThumbnailGrid.Dark</item>
        <item name="pspdf__toolbarCoordinatorLayoutStyle">@style/PSPDFCatalog.ToolbarCoordinator.Dark</item>
        <item name="pspdf__searchResultHighlighterStyle">@style/PSPDFCatalog.SearchResultHighlighter.Dark</item>
        <item name="pspdf__annotationSelectionStyle">@style/PSPDFCatalog.AnnotationSelection.Dark</item>
        <item name="pspdf__textSelectionStyle">@style/PSPDFCatalog.TextSelection.Dark</item>
        <item name="pspdf__propertyInspectorStyle">@style/PSPDFCatalog.PropertyInspector.Dark</item>
        <item name="pspdf__actionMenuStyle">@style/PSPDFCatalog.ActionMenu.Dark</item>
        <item name="pspdf__stampPickerStyle">@style/PSPDFCatalog.StampPicker.Dark</item>
        <item name="pspdf__signatureLayoutStyle">@style/PSPDFCatalog.SignatureLayout.Dark</item>
        <item name="pspdf__documentViewStyle">@style/PSPDFCatalog.DocumentViewStyle.Dark</item>
        <item name="pspdf__sharingDialogStyle">@style/PSPDFCatalog.SharingDialog.Dark</item>
        <item name="pspdf__newPageDialogStyle">@style/PSPDFCatalog.NewPageDialog.Dark</item>
        <item name="pspdf__modalDialogStyle">@style/PSPDFCatalog.ModalDialog.Dark</item>
        <item name="pspdf__formSelectionStyle">@style/PSPDFCatalog.FormSelection.Dark</item>
        <item name="pspdf__annotationNoteHinterStyle">@style/PSPDFCatalog.AnnotationNoteHinter.Dark</item>
    </style>

    <!-- Action bar icon items. -->
    <style name="PSPDFCatalog.ActionBarIcons.Dark" parent="PSPDFKit.ActionBarIcons">
        <!-- Default icons. -->
        <item name="pspdf__iconsColor">@color/dark_icons_blue</item>
        <item name="pspdf__iconsColorActivated">@color/color_primary_dark</item>
    </style>

    <style name="PSPDFCatalog.ContextualToolbar.Dark" parent="PSPDFKit.ContextualToolbar">
        <item name="pspdf__iconsColor">@color/dark_icons_blue</item>
        <item name="pspdf__iconsColorActivated">@color/white</item>
    </style>

    <style name="PSPDFCatalog.SearchResultHighlighter.Dark" parent="PSPDFKit.SearchResultHighlighter">
        <item name="pspdf__searchResultBackgroundColor">@color/dark_selection_background</item>
        <item name="pspdf__searchResultBorderColor">@color/search_result_highlight_border_color</item>
    </style>

    <!-- Inline search items. -->
    <style name="PSPDFCatalog.SearchViewInline.Dark" parent="PSPDFKit.SearchViewInline">
        <item name="pspdf__backgroundColor">@android:color/transparent</item>
        <item name="pspdf__borderColor">@color/dark_input_field_blue</item>
        <item name="pspdf__borderWidth">1dp</item>
        <item name="pspdf__inputFieldTextAppearance">@style/PSPDFCatalog.SeachViewInline.InputFieldTextAppearance.Dark</item>
        <item name="pspdf__resultTextAppearance">@style/PSPDFCatalog.SearchViewInline.ResultTextAppearance.Dark</item>
        <item name="pspdf__throbberColor">@color/dark_icons_blue</item>
        <item name="pspdf__prevIconColorTint">@color/dark_icons_blue</item>
        <item name="pspdf__nextIconColorTint">@color/dark_icons_blue</item>
        <item name="pspdf__backIconColorTint">@color/dark_icons_blue</item>
    </style>

    <style name="PSPDFCatalog.SeachViewInline.InputFieldTextAppearance.Dark" parent="PSPDFKit.SearchViewInline.InputFieldTextAppearance">
        <item name="android:textColor">@color/dark_icons_blue</item>
        <item name="android:textColorHint">@color/dark_icons_blue</item>
    </style>

    <style name="PSPDFCatalog.SearchViewInline.ResultTextAppearance.Dark" parent="PSPDFKit.SearchViewInline.ResultTextAppearance">
        <item name="android:textColor">@color/dark_icons_blue</item>
    </style>

    <!-- Modular search items. -->
    <style name="PSPDFCatalog.SearchViewModular.Dark" parent="PSPDFKit.SearchViewModular">
        <item name="pspdf__backgroundColor">@color/dark_background_color</item>
        <item name="pspdf__inputFieldTextColor">@color/dark_background_color</item>
        <item name="pspdf__inputFieldHintColor">@color/white</item>
        <item name="pspdf__inputFieldBackgroundColor">@color/dark_input_field_blue</item>
        <item name="pspdf__separatorColor">@android:color/transparent</item>
        <!--item name="pspdf__listItemBackgroundColor"></item-->
        <item name="pspdf__listItemTitleColor">@color/dark_page_number_blue</item>
        <item name="pspdf__listItemSubtitleColor">@color/white</item>
        <!--item name="pspdf__listItemSelector"></item-->
        <item name="pspdf__highlightBackgroundColor">@color/dark_selection_background</item>
        <item name="pspdf__highlightTextColor">@color/dark_selection_text</item>
        <item name="pspdf__highlightBorderColor">@color/black</item>
    </style>

    <!-- Thumbnail bar items. -->
    <style name="PSPDFCatalog.ThumbnailBar.Dark" parent="PSPDFKit.ThumbnailBar">
        <item name="pspdf__backgroundColor">@color/dark_background_color</item>
        <item name="pspdf__thumbnailWidth">@dimen/thumbnail_bar_width</item>
        <item name="pspdf__thumbnailHeight">@dimen/thumbnail_bar_height</item>
        <item name="pspdf__thumbnailBorderColor">@color/dark_input_field_blue</item>
    </style>

    <!-- Outline view items. -->
    <style name="PSPDFCatalog.OutlineView.Dark" parent="PSPDFKit.OutlineView">
        <item name="pspdf__backgroundColor">@color/dark_status_bar</item>
        <item name="pspdf__defaultTextColor">@color/dark_input_field_blue</item>
        <item name="pspdf__bookmarksBarIconColor">@color/dark_icons_blue</item>
        <item name="pspdf__bookmarksGroupIndicatorIconColor">@color/dark_input_field_blue</item>
        <item name="pspdf__navigationTabIconsColor">@color/gray_light</item>
        <item name="pspdf__navigationTabIconsColorSelected">@color/dark_icons_blue</item>
        <item name="pspdf__navigationTabBackgroundColor">@color/dark_background_color</item>
        <item name="pspdf__documentInfoGroupTitleTextColor">@color/dark_accent</item>
        <item name="pspdf__documentInfoItemTitleTextColor">@color/dark_document_info_item_title_text</item>
        <item name="pspdf__documentInfoItemValueTextColor">@color/dark_document_info_item_value_text</item>
        <item name="pspdf__documentInfoItemValueHintTextColor">@color/dark_document_info_item_value_hint_text</item>
        <item name="pspdf__documentInfoGroupIconColor">@color/dark_accent</item>
        <item name="pspdf__documentInfoFabBackgroundColor">@color/color_primary</item>
        <item name="pspdf__documentInfoFabIconColor">@color/white</item>
    </style>

    <style name="PSPDFCatalog.ThumbnailGrid.Dark" parent="PSPDFKit.ThumbnailGrid">
        <item name="pspdf__backgroundColor">@color/dark_status_bar</item>
    </style>

    <style name="PSPDFCatalog.ToolbarCoordinator.Dark" parent="PSPDFKit.ToolbarCoordinatorLayout">
        <item name="pspdf__dragTargetColor">@color/dark_drag_target</item>
    </style>

    <style name="PSPDFCatalog.AnnotationSelection.Dark" parent="PSPDFKit.AnnotationSelection">
        <item name="pspdf__borderColor">@color/dark_accent</item>
        <item name="pspdf__borderWidth">2dp</item>
        <item name="pspdf__scaleHandleColor">@color/dark</item>
        <item name="pspdf__editHandleColor">@color/dark_background_color_secondary</item>
        <item name="pspdf__padding">24dp</item>
    </style>

    <style name="PSPDFCatalog.TextSelection.Dark" parent="PSPDFKit.TextSelection">
        <item name="pspdf__highlightColor">@color/dark_text_selection_highlight</item>
        <item name="pspdf__leftHandleColor">@color/dark_text_selection_left_handle</item>
        <item name="pspdf__rightHandleColor">@color/dark_text_selection_right_handle</item>
    </style>

    <style name="PSPDFCatalog.PropertyInspector.Dark" parent="PSPDFKit.PropertyInspector">
        <item name="pspdf__backgroundColor">?colorPrimary</item>
        <item name="pspdf__textColor">?colorAccent</item>
        <item name="pspdf__modalDialogStyle">@style/PSPDFCatalog.ModalDialog.Dark</item>
    </style>

    <style name="PSPDFCatalog.ActionMenu.Dark" parent="PSPDFKit.ActionMenu">
        <item name="pspdf__backgroundColor">?colorPrimary</item>
        <item name="pspdf__labelColor">?colorAccent</item>
        <item name="pspdf__fixedActionsPanelBackgroundColor">@color/dark_background_color_secondary</item>
        <item name="pspdf__fixedActionsIconColor">?colorPrimaryDark</item>
        <item name="pspdf__fixedActionsIconBackground">?colorAccent</item>
    </style>

    <style name="PSPDFCatalog.SignatureLayout.Dark" parent="PSPDFKit.SignatureLayout">
        <item name="pspdf__backgroundColor">@color/dark_background_color</item>
        <item name="pspdf__addSignatureIcon">@drawable/pspdf__ic_add</item>
        <item name="pspdf__addSignatureIconColor">@color/white</item>
        <item name="pspdf__addSignatureIconBackgroundColor">?colorAccent</item>
        <item name="pspdf__acceptSignatureIcon">@drawable/pspdf__ic_done</item>
        <item name="pspdf__acceptSignatureIconColor">@color/white</item>
        <item name="pspdf__acceptSignatureIconBackgroundColor">@color/teal</item>
        <item name="pspdf__deleteSelectedSignaturesIcon">@drawable/pspdf__ic_delete</item>
        <item name="pspdf__deleteSelectedSignaturesIconColor">@color/white</item>
        <item name="pspdf__deleteSelectedSignaturesIconBackgroundColor">@color/red_light</item>
        <item name="pspdf__clearSignatureCanvasIcon">@drawable/pspdf__ic_delete</item>
        <item name="pspdf__clearSignatureCanvasIconColor">@color/white</item>
        <item name="pspdf__clearSignatureCanvasIconBackgroundColor">@color/gray</item>
        <item name="pspdf__signatureInkColorPrimary">@color/signature_black</item>
        <item name="pspdf__signatureInkColorSecondary">@color/signature_blue</item>
        <item name="pspdf__signatureInkColorTertiary">@color/signature_red</item>
        <item name="pspdf__textColor">@color/gray_dark</item>
        <item name="android:listDivider">@drawable/pspdf_list_divider_light</item>
    </style>

    <style name="PSPDFCatalog.StampPicker.Dark" parent="PSPDFKit.StampPicker">
        <item name="pspdf__backgroundColor">@color/white</item>
        <item name="pspdf__textColor">@color/dialog_text_color</item>
        <item name="pspdf__hintColor">@color/gray</item>
    </style>

    <style name="PSPDFCatalog.DocumentViewStyle.Dark" parent="PSPDFKit.DocumentView">
        <item name="android:scrollbarSize">6dp</item>
        <item name="android:scrollbarThumbVertical">@color/dark_scrollbars</item>
        <item name="android:scrollbarThumbHorizontal">@color/dark_scrollbars</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">horizontal|vertical</item>
    </style>

    <style name="PSPDFCatalog.AlertDialog.Dark" parent="PSPDFKit.AlertDialog">
        <item name="android:colorBackground">?colorPrimary</item>
        <!-- Alert dialog's title text color. -->
        <item name="android:textColor">@color/dark_input_field_blue</item>
    </style>

    <style name="PSPDFCatalog.SharingDialog.Dark" parent="ThemeOverlay.AppCompat">
        <item name="pspdf__backgroundColor">?colorPrimary</item>
        <item name="pspdf__errorColor">@color/error</item>
        <item name="android:colorBackground">?colorPrimary</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="PSPDFCatalog.NewPageDialog.Dark" parent="ThemeOverlay.AppCompat">
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="PSPDFCatalog.ModalDialog.Dark" parent="PSPDFKit.ModalDialog">
        <item name="pspdf__titleBackground">?colorPrimaryDark</item>
        <item name="pspdf__titleTextColor">?colorAccent</item>
        <item name="pspdf__titleIconsColor">?colorAccent</item>
    </style>

    <style name="PSPDFCatalog.FormSelection.Dark" parent="PSPDFKit.FormSelection">
        <item name="pspdf__selectedTextElementBackgroundColor">@color/dark_selection_background</item>
        <item name="pspdf__touchedFormElementHighlightColor">#6064BDDF</item>
    </style>

    <style name="PSPDFCatalog.AnnotationNoteHinter.Dark" parent="PSPDFKit.AnnotationNoteHinter">
        <item name="pspdf__noteHinterColor">@color/gray</item>
        <item name="pspdf__useNoteHinterIntrinsicSize">false</item>
        <item name="pspdf__noteHinterWidth">24dp</item>
        <item name="pspdf__noteHinterHeight">24dp</item>
        <item name="pspdf__noteHinterTextMarkupLeftPadding">8dp</item>
        <item name="pspdf__noteHinterAlpha">255</item>
        <item name="pspdf__noteHinterIcon">@drawable/pspdf__ic_caret</item>
    </style>
</resources>
